.score {
    display: flex;
}

.title{
    flex:1;
    height: 150rpx;
    line-height: 150rpx;
    background:pink;
    margin: 40rpx 20rpx 40rpx 40rpx;
    text-align: center;
    font-size: 1.5rem;
    color: white;
    border-radius: 8rpx;
}


.scoredetail{
    flex:1;
    height: 150rpx;
    background:rgb(204, 245, 247);
    margin: 40rpx 20rpx;
    text-align: center;
    border-radius: 8rpx;
}

.scoredetail:last-child{
    margin-right: 40rpx;
}

.scoredesc{
    font-size: 0.8rem;
    line-height: 60rpx;
}
.scorenumber{
    line-height: 70rpx;
}
.ground{
    width: 660rpx;
    height:840rpx;
    margin-left: 40rpx;
}
.block{
    width:30rpx;
    height:30rpx;
    float: left;
    background: rgb(250, 248, 195);
}
.rows{
    width: 660rpx;
    height:30rpx;
}
.control{
    width: 100%;
    height: 100%;
}
.block_1{
    background:rgb(243, 141, 243);
}
.block_2{
    background:rgb(89, 224, 89);
}